#!/bin/sh

case "$1" in
    lock)
        swaylock
    ;;
    suspend)
        playerctl -a pause
        bluetoothctl disconnect
        systemctl -i suspend
        swaylock
        ;;
    reboot)
        systemctl -i reboot
        ;;
    shutdown)
        systemctl -i poweroff
        ;;
    *)
        echo "Usage: $0 {tty|lock|suspend|reboot|shutdown}"
        exit 2
        ;;
esac