#!/bin/sh
#
# Description:	Screenshot utility for Sway
# Dependencies:	grim, imv, slurp
# Author:	Pavle Batuta <pavle@batuta.xyz>, maximbaz

# Temp screenshots dir:
mkdir -p /tmp/screenshots
cd /tmp/screenshots

# If there are any window transparency modifications, stop them here.

curOut=$(swaymsg -t get_outputs | jq -r '.[] | select(.focused)' | jq -r '.name')
grim -o "$curOut" -t png sshot.png

#vimiv -f -s statusbar.show false screenshot.png &
imv -f sshot.png &

geometry=$(slurp)
if [ -n "$geometry" ]; then
	grim -g "$geometry" -t png area.png
else
	grim -t png area.png
fi

kill $!

[ -f area.png ] && swappy -f area.png

rm -f sshot.png area.png

